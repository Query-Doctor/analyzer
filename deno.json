{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
  "version": "0.0.1",
  "unstable": [
    "raw-imports"
  ],
  "tasks": {
    "start": "deno run --allow-run --allow-read --allow-write --allow-env --allow-net main.ts",
    "start:dev": "deno run --env-file=.env -A main.ts",
    "dev": "deno run --env-file=.env -A --watch main.ts"
  },
  "imports": {
    "@actions/core": "npm:@actions/core@^1.11.1",
    "@actions/github": "npm:@actions/github@^6.0.1",
    "@libpg-query/parser": "npm:@libpg-query/parser@^17.5.1",
    "@pgsql/types": "npm:@pgsql/types@^17.6.1",
    "@std/assert": "jsr:@std/assert@1",
    "@std/data-structures": "jsr:@std/data-structures@^1.0.8",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@types/nunjucks": "npm:@types/nunjucks@^3.2.6",
    "chokidar": "npm:chokidar@^4.0.3",
    "dedent": "npm:dedent@^1.6.0",
    "fast-csv": "npm:fast-csv@^5.0.2",
    "nunjucks": "npm:nunjucks@^3.2.4",
    "pgsql-deparser": "npm:pgsql-deparser@^17.8.1",
    "sql-formatter": "npm:sql-formatter@^15.6.5",
    "sql-highlight": "npm:sql-highlight@^6.1.0",
    "postgresjs": "https://deno.land/x/postgresjs@v3.4.7/mod.js",
    "zod": "npm:zod@^4.0.2"
  }
}
